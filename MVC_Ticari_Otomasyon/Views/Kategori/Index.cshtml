@using MVC_Ticari_Otomasyon.Models.siniflar;
@model List<Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered"style="margin-top:20px"   
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>


    @foreach (var kat in Model)
    {
                <tr>
                    <td>@kat.kategoriID</td>
        <td>@kat.kategoriAd</td>
        <td><a href="/Kategori/KategoriSil/@kat.kategoriID"class="btn btn-danger">Sil</a></td>
        <td><a href="/Kategori/KategoriGetir/@kat.kategoriID"class="btn btn-success">Kategori Güncelle</a></td>
                </tr>


     };

</table>
<a href="/Kategori/KategoriEkle"class="btn btn-primary">Kategori Ekle</a>