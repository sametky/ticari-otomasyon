@model MVC_Ticari_Otomasyon.Models.siniflar.Departman
@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Departman Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.departmanAd)
    @Html.TextBoxFor(x => x.departmanAd, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>

<div class="form-group" method="post">
    <label>Kategori No:</label>
    @Html.DisplayFor(model => model.departmanID)
</div>
<div class="form-group">
    <label>Kategori Ad:</label>
    @Html.DisplayFor(model => model.departmanAd)
</div>