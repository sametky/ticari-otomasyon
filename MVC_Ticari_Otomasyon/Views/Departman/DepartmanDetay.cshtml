@using MVC_Ticari_Otomasyon.Models.siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Personel ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>GÖRSEL</th>
        <th>SATIŞLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.personelID</td>
            <td>@x.personelAd</td>
            <td>@x.personelSoyad</td>
            <td>@x.personelGorsel</td>
            <td><a href="/Departman/DepartmanSatisPersonel/@x.personelID" class="btn btn-default" style="background-color:orange">Satışlar</a></td>
        </tr>
    }


</table>
